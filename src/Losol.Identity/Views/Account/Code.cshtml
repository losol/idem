@model Losol.Identity.Controllers.Account.SmsCodeVerificationModel

<div class="login-page">
    <div class="page-header">
        <h1>Login</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Local Login</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="Code">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <input type="hidden" asp-for="PhoneNumber" />

                        <fieldset>

                            <div class="form-group">
                                <label asp-for="SmsCode"><span>Enter SMS Code</span></label>
                                <input class="form-control" placeholder="SMS Code" asp-for="SmsCode" autofocus>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="verify">Verify</button>
                                <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                            </div>

                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>